<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/homeProfilePictureImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="112dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/homeIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="id"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/homeProfilePictureImageView"
        app:layout_constraintStart_toStartOf="@+id/homeProfilePictureImageView"
        app:layout_constraintTop_toBottomOf="@+id/homeProfilePictureImageView" />

    <TextView
        android:id="@+id/homeUsernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Username"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/homeIdTextView"
        app:layout_constraintStart_toStartOf="@+id/homeIdTextView"
        app:layout_constraintTop_toBottomOf="@+id/homeIdTextView" />

    <TextView
        android:id="@+id/homeEmailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Email"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/homeUsernameTextView"
        app:layout_constraintStart_toStartOf="@+id/homeUsernameTextView"
        app:layout_constraintTop_toBottomOf="@+id/homeUsernameTextView" />

    <Button
        android:id="@+id/homeLogoutButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Log out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>